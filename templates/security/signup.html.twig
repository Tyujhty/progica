{% form_theme formSearch 'tailwind_2_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

    <div class="flex flex-wrap flex-col justify-center items-center max-w-screen-2xl mt-36 lg:mt-32 h-full mx-auto mb-10">
        <div class="flex flex-col items-center w-10/12 lg:w-3/5 mb-8 text-justify">
            <h2 class="text-2xl mb-2 text-txtBlueDark font-semibold">Pourquoi s'inscrire sur Progica ?</h2>
            <p><strong>Maximisez vos revenus</strong> en mettant votre g√Æte en location sur Progica. Rejoignez notre plateforme conviviale et atteignez des voyageurs du monde entier.</p>
        </div>
        <div class="bg-bgGolorGrayLight w-10/12 lg:w-8/12 py-4 px-0 lg:px-8 flex flex-col items-center rounded-2xl">
            {{form_start(signupForm, {'attr': {'class': 'w-4/5 '}})}}
                {{ form_row(signupForm.firstName, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.lastName, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.address, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.email, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.phone, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.password.first, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.password.second, {
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}
                {{ form_row(signupForm.avatarFile, {
                    label_class: 'mb-1',
                    row_class: 'flex flex-col mb-4',
                    widget_class: 'rounded'
                })}}

                {{form_rest(signupForm)}}

                <div class="text-center">
                    <button class="btn btn-primary">S'inscrire</button>
                </div>
            
            {{form_end(signupForm)}}
            
        </div>
    </div>

{% endblock %}
