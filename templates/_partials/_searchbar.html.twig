{% form_theme formSearch 'tailwind_2_layout.html.twig' %}

<div class="h-20 flex justify-center items-center searchbar">
    <div class="searchbar-txt">
        <p>Je recherche un gîte</p>
    </div>
    <div class="flex justify-center items-center h-full ml-6 searchbar-ctn">
        {{ form_start(formSearch) }}
            <div class="flex items-center">
                {# {{ form_row(formSearch.content, {
                    widget_class: 'rounded-l-3xl w-80 border-none focus:ring-transparent searchbar-ctn-input'
                })}} #}
                {{ form_row(formSearch.region, {
                    widget_class: 'rounded-3xl w-auto border-none focus:ring-transparent mr-4'
                })}}
                {{ form_row(formSearch.department, {
                    widget_class: 'rounded-3xl w-auto border-none focus:ring-transparent mr-4'
                })}}
                
                <span class='mr-4'>de </span>
                {{ form_row(formSearch.start, {
                    widget_class: 'rounded-lg searchbar-ctn-date'
                }) }}
                <span class='mx-4'> à </span>
                {{ form_row(formSearch.end, {
                    widget_class: 'rounded-lg mr-4 searchbar-ctn-date'
                }) }}
                
                {{ form_row(formSearch.rechercher) }}
                {{ form_row(formSearch.filtres) }}
            </div>
    </div>
</div>
<div class="hidden justify-around px-60 pt-3 h-48 filters">
    <div class="flex flex-col items-center w-1/3 filters-int">
        <h2>Intérieur</h2>
        {{ form_row(formSearch.interior, {
            row_class:'flex flex-col justify-start h-full focus:ring-transparent'
        }) }}
    </div>
    <div class="flex flex-col items-center w-1/3 filters-ext">
        <h2>Extérieur</h2>
        {{ form_row(formSearch.exterior, {
            row_class:'flex flex-col justify-start h-full'
        }) }}
    </div>
    <div class="flex flex-col items-center w-1/3 filters-serv">
        <h2>Services</h2>
        {{ form_row(formSearch.services, {
            row_class: 'flex flex-col justify-start h-full',
            widget_attr: 'grid'
        }) }}

    </div>
{{ form_end(formSearch) }}

